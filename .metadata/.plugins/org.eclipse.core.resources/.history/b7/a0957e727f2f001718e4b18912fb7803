
public class Face {
	public char[][] tiles;
	private Face aboveFace;
	private Face belowFace;
	private Face leftFace;
	private Face rightFace;

	public Face(char c) {
		tiles = new char[][] {
			{ c, 'x', c },
			{ c, c, 'q' },
			{ c, c, 'y' }
		};
	}

	public void rotateClockWise() {

	}

	public void rotateCounterClockWise() {

	}

	@Override
	public String toString() {
		String out = "";
		for (char[] row : tiles)
		{
			for (char c : row)
			{
				out += c + " ";
			}
			out += "\n";
		}
		return out;
	}

	public char[] getSide(char s) {
		switch (s) {
			case 't': {
				return tiles[0];
			}
			case 'b': {
				return tiles[tiles.length - 1];
			}
			case 'l': {
				char[] arr = new char[tiles.length];
				for (int r = 0; r < tiles.length; r++)
				{
					arr[r] = tiles[r][0];
				}
				return arr;

			}
			case 'r': {
				char[] arr = new char[3];
				for (int r = 0; r < tiles.length; r++)
				{
					arr[r] = tiles[r][tiles.length - 1];
				}
				return arr;
			}
		}
		return null;
	}

	public static void main(String[] args) {
		Face f = new Face('c');
		System.out.println(f.getSide('t'));
		System.out.println(f.getSide('b'));
		System.out.println(f.getSide('l'));
		System.out.println(f.getSide('r'));
		System.out.println(f);
	}
}
