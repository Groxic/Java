import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.RenderingHints;

public class FaceRect extends Face {
	public ColorRect[][] rectFace;

	public void paint(Graphics g, int x, int y, int STEP) {
		Graphics2D g2d = (Graphics2D) g;
		g2d.setRenderingHint(RenderingHints.KEY_ANTIALIASING, RenderingHints.VALUE_ANTIALIAS_ON);
		ColorRect colR;
		for (int r = 0; r < 3; r++) {
			for (int c = 0; c < 3; c++) {
				colR = rectFace[r][c];
				g2d.setColor(colR.getColor());
				g2d.fillRect(x + STEP * c + 1, y + r * STEP + 1, STEP - STEP / 5, STEP - STEP / 5);
			}
		}
	}

	public FaceRect(char c, Color color, int x, int y, int SIZE_MOD) {
		super(c);
		for (int i = 0; i < 3; i++) {
			for (int j = 0; j < 3; j++) {
				rectFace[i][j] = new ColorRect(x + c * SIZE_MOD, y + i * SIZE_MOD, SIZE_MOD, color);
			}
		}
	}
}
